#!/usr/bin/env zsh

echo "\n-- Lookbook | Unit and integration tests ---------------------\n"
bin/rails test

while getopts ":a" option; do
  case $option in
    a)
      echo "\n-- Lookbook | System tests ---------------------\n"
      bin/rails test:system
      exit;;
    \?)
      echo "Error: Invalid option"
      exit;;
  esac
done
