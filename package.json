{
  "name": "lookbook",
  "version": "3.0.0-alpha.2",
  "private": true,
  "description": "A native development UI for ViewComponent",
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./public/lookbook-assets",
    "copy:fonts": "copyfiles -u 2 ./assets/fonts/* ./public/lookbook-assets/fonts",
    "copy": "npm run copy:fonts",
    "watch": "npm run clean && npm run copy && concurrently \"npm:watch:css\" \"npm:watch:js\"",
    "build": "npm run clean && npm run copy && npm run build:css && npm run build:js",
    "watch:css": "postcss ./assets/entrypoints/*.css -d ./public/lookbook-assets --watch",
    "build:css": "postcss ./assets/entrypoints/*.css -d ./public/lookbook-assets",
    "watch:js": "node esbuild.config.js --watch",
    "build:js": "node esbuild.config.js",
    "lint:fix": "bundle exec standardrb --fix && prettier --write .",
    "prepare": "husky",
    "release": "release-it"
  },
  "author": "Mark Perkins",
  "license": "MIT",
  "dependencies": {
    "@alpinejs/morph": "^3.14.0",
    "@alpinejs/persist": "^3.14.0",
    "@iframe-resizer/child": "^5.3.3",
    "@iframe-resizer/parent": "^5.3.3",
    "alpinejs": "^3.14.0",
    "container-query-polyfill": "^1.0.2",
    "js-cookie": "^3.0.5",
    "lit": "^3.1.3",
    "lucide": "^0.479.0",
    "shiki": "^3.1.0",
    "split-grid": "^1.0.11",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "alias-hq": "^6.2.3",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.20.2",
    "esbuild-plugin-copy": "^2.1.1",
    "fast-glob": "^3.3.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.36",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.1",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^9.5.2",
    "prettier": "^3.2.5",
    "release-it": "^17.3.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "(**/*.(rb|rake))|Gemfile|Rakefile": [
      "bundle exec standardrb --fix"
    ]
  }
}
