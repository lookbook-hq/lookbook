<% if @spec %>
  <% content_for :title do %>
    <%= "#{@spec.label} :: Specs" %>
  <% end %>
<% end %>

<% content_for :sidebar do %>
  <lb-sidebar label="<%= Lookbook.config.preview_collection_label %>" icon="blocks" slot="sidebar">
    <lb-nav activepath="<%= url_for %>" slot="nav" persist-as="nav.previews">
      <lb-data slot="items" format="json" id="previews-data">
        <%= @specs.to_tree.children.sort.to_json %>
      </lb-data>

      <div slot="no-results">
        No previews match your filter.
      </div>

      <lb-blankslate icon="layers-2" slot="blank-slate">
        <p>It looks like you haven't created any previews yet.</p>
      </lb-blankslate>
    </lb-nav>
  </lb-sidebar>
<% end %>

<%= render template: "layouts/lookbook/application" %>
