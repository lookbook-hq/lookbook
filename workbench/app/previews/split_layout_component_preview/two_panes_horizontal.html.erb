<%= render Lookbook::SplitLayout::Component.new(alpine_data: "$store.workbench.horizontalSplitLayout", style: "min-height: calc(100vh - 48px);") do |layout| %>
  <% layout.with_pane do %>
    <div style="border: 1px solid #ddd; border-bottom: 0; width: 100%; height: 100%; padding: 20px;">
      Drag divider to resize panes.
    </div>
  <% end %>

  <% layout.with_pane do %>
    <div style="border: 1px solid #ddd; border-top: 0; width: 100%; height: 100%; padding: 20px;">
      Drag divider to resize panes.
    </div>
  <% end %>
<% end %>